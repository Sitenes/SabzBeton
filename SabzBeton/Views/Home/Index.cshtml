    <!-- Event Modal Script -->
    <script>
        // Event Modal Functions
        function openEventModal(eventId) {
            const modal = document.getElementById('eventModal' + eventId.replace('event', ''));
            if (modal) {
                modal.style.display = 'flex';
                document.body.style.overflow = 'hidden';

                // Initialize Swiper for gallery modals
                if (eventId === 'event3' || eventId === 'event4') {
                    setTimeout(() => {
                        const swiperEl = modal.querySelector('.event-gallery-slider');
                        if (swiperEl && !swiperEl.swiper) {
                            new Swiper(swiperEl, {
                                loop: true,
                                speed: 600,
                                autoplay: {
                                    delay: 5000,
                                    disableOnInteraction: false,
                                },
                                navigation: {
                                    nextEl: '.swiper-button-next',
                                    prevEl: '.swiper-button-prev',
                                },
                                pagination: {
                                    el: '.swiper-pagination',
                                    clickable: true,
                                    type: 'bullets',
                                },
                            });
                        }
                    }, 100);
                }

                // Auto-play video if it's a video modal
                const video = modal.querySelector('.modal-video');
                if (video) {
                    video.play();
                }
            }
        }

        function closeEventModal(eventId) {
            const modal = document.getElementById('eventModal' + eventId.replace('event', ''));
            if (modal) {
                modal.style.display = 'none';
                document.body.style.overflow = '';

                // Pause video if it's playing
                const video = modal.querySelector('.modal-video');
                if (video) {
                    video.pause();
                    video.currentTime = 0;
                }
            }
        }

        // Close modal when clicking outside
        window.onclick = function (event) {
            if (event.target.classList.contains('event-modal')) {
                const modalId = event.target.id;
                const eventId = 'event' + modalId.replace('eventModal', '');
                closeEventModal(eventId);
            }
        }

        // Close modal with Escape key
        document.addEventListener('keydown', function (event) {
            if (event.key === 'Escape') {
                const openModals = document.querySelectorAll('.event-modal[style*="display: flex"]');
                openModals.forEach(modal => {
                    const modalId = modal.id;
                    const eventId = 'event' + modalId.replace('eventModal', '');
                    closeEventModal(eventId);
                });
            }
        });
    </script>

